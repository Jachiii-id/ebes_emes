FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files FIRST
COPY package.json ./
COPY pnpm-lock.yaml ./
COPY tsconfig.json ./

# Install dependencies (including dev dependencies for build)
RUN pnpm install

# Copy source code AFTER installing dependencies
COPY . .

# Build the application
RUN pnpm run build

EXPOSE 3000

CMD ["pnpm", "run", "start:dev"]
